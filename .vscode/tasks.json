{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Backend",
            "type": "shell",
            "command": "npm run dev",
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "presentation": {
                "group": "server",
                "reveal": "always",
                "panel": "dedicated"
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "node",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "watching path",
                    "endsPattern": "Server is running on port|MongoDB Connected"
                },
                "pattern": {
                    "regexp": "^.*$"
                }
            }
        },
        {
            "label": "Start Frontend",
            "type": "shell",
            "command": "npm run dev",
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "presentation": {
                "group": "server",
                "reveal": "always",
                "panel": "dedicated"
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "node",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "VITE",
                    "endsPattern": "Local:|Ready in"
                },
                "pattern": {
                    "regexp": "^.*$"
                }
            }
        }
    ]
}